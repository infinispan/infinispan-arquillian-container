<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://www.jboss.org/arquillian-1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.jboss.org/arquillian-1.0 http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

    <group qualifier="Grid">
        <container qualifier="container1">
            <protocol type="jmx-as7">
                <property name="executionType">REMOTE</property>
            </protocol>
            <configuration>
                <property name="bindAddress">test1</property>
                <property name="managementAddress">test1</property>
                <property name="managementPort">9999</property>
                <property name="jbossHome">/path/to/edg0</property>
            </configuration>
        </container>
        <container qualifier="container2">
            <protocol type="jmx-as7">
                <property name="executionType">REMOTE</property>
            </protocol>
            <configuration>
                <property name="bindAddress">test2</property>
                <property name="managementAddress">test2</property>
                <property name="managementPort">9999</property>
                <property name="jbossHome">/path/to/edg1</property>
            </configuration>
        </container>
    </group>

<!--  
    Other properties related to JBoss AS 7+:
    managementPort, jmxPort, httpPort, startupTimeoutInSeconds, javaVmArguments, ... 
-->
    
</arquillian>
